<h1>Listing characters</h1>

<table>
  <thead>
    <tr>
      <th>Char name</th>
      <th>Char family</th>
      <th>Char description</th>
      <th>Char image</th>
      <th>Char acted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.char_name %></td>
        <td><%= character.char_family %></td>
        <td><%= character.char_description %></td>
        <td><%= character.char_image %></td>
        <td><%= character.char_acted %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

